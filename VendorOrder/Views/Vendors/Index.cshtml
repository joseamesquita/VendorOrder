@using VendorOrder.Models; 
@{
  Layout = "_Layout";
}
<div>
  <h1 class="text-center">Vendors</h1>
  @if (Model.Count == 0)
  {
    <p class="text-center">No Vendors Have Been Added Yet!</p>
  }
  @foreach (Vendor vendor in Model)
  {
    <p class="text-center"><a href='/vendors/@vendor.Id'>@vendor.Name</a></p>
    <br>
  }
   <p class="text-center">
    <a class="btn btn-info" href='/vendors/new' role="button">Add A New Vendor</a>
  </p>
</div>