@using VendorOrder.Models;
@{
  Layout = "_Layout";
}
<div class="col-md-8 offset-md-2">

  <h1 class="text-center">Vendors</h1>
  
  @if (Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  }
  <ul class="list-group">
    @foreach (Vendors vendor in Model)
  { 
    <h3 class="text-center"><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
    @* <li class="list-group-item">Title: @vendors.Title</li> *@
    <a href="/vendors/@vendor.Id"><button class="btn btn-success btn-lg btn-block">Show</button></a>
  <br>
  }
  
  </ul>
</div>