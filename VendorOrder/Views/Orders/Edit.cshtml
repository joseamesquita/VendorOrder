@{
  Layout = "_Layout";
}

<div class="col-md-6 offset-md-3">

  <h1 class="text-center">Edit Order</h1>
  <form action="/vendors/@Model.Id" method="post">
  <div class="form-group">
    <label for="title">Name of the Order</label>
    <input type="text" class="form-control" name="title" value="@Model.Title">
  </div>

  <div class="form-group">
    <label for="description">Description of the Order</label>
    <input type="text" class="form-control" name="description" value="@Model.Description">
  </div>

  <div class="form-group">
    <label for="contact">Cost of the Order</label>
    <input type="text" class="form-control" name="contact" value="@Model.Contact">
  </div>

    <button type="submit" class="btn btn-info btn-block" name="id" value="@Model.Id">Update</button>
  </form>
</div>